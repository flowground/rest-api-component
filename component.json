{
  "title": "RiverSand Ack",
  "description": "elastic.io component for sending Ack message to RiverSand",
  "docsUrl": "https://github.com/elasticio/rest-api-component",
  "actions": {
    "httpRequestAction": {
      "main": "./lib/actions/httpRequestAction.js",
      "title": "Ack send",
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "messageType": {
              "type": "string",
              "required": true,
              "enum": ["ack", "error"]
            },
            "status": {
              "type": "string",
              "required": true,
              "enum": ["Submitted", "SentToEndPoint", "Completed"]
            },
            "message": {
              "type": "string",
              "required": true
            },
            "workautomationId": {
              "type": "string",
              "required": true
            }
          }
        }
      },
      "fields": {
        "url": {
          "label": "URL",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "port": {
          "label": "Port",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "tenant_id": {
          "label": "Tenant ID",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "channel": {
          "label": "Channel that we connect to ( Amazon, Walmart or GoogleShopping etc.)",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "user_id": {
          "label": "User ID",
          "required": true,
          "viewClass": "TextFieldView"
        }
      }
    }
  }
}
